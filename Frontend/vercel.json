{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "dist"
        }
      }
    ],
    "routes": [
      {
        "src": "/assets/(.*)",
        "headers": {
          "Cache-Control": "public, max-age=31536000, immutable"
        }
      },
      {
        "src": "/(.*)",
        "dest": "/index.html"
      }
    ],
    "rewrites": [
      {
        "source": "/api/(.*)",
        "destination": "https://notes-tasking-app.vercel.app/api/$1"
      }
    ],
    "env": {
      "VITE_API_URL": "https://notes-tasking-app.vercel.app/api"
    }
  }